@{
    ViewData["Title"] = "Resources and Privacy Policy";
}
<!-- Hero Section -->
<div class="hero-section text-white d-flex align-items-center" style="background-image: url('@Url.Content("~/assets/16428394152_4939ddc42d_h.jpg")'); background-size: cover; background-position: center;">
    <div class="container text-center">
        <h1 class="display-4 fw-bold">@ViewData["Title"]</h1>
        <p class="lead">Your one-stop resource for support and information.</p>
    </div>
</div>

<!-- Testing Information Link -->
<div class="container text-center my-4">

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OM_79_HUB</title>
    <link rel="stylesheet" href="~/css/OM_HUB_Bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OM_79_HUB.styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <img alt="List View" src="@Url.Content("~/Assets/dot.png")" style="width:50px; height:50px; margin-right: 10px; margin-top: 5px;" />
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="font-weight: bold;">OM-79 Administrator</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="d-flex justify-content-between w-100">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index" style="font-weight: bold;">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy" style="font-weight: bold;">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Resources" style="font-weight: bold;">Resources</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" style="font-weight: bold;" aria-haspopup="true" aria-expanded="false">Indexes</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" style="font-weight: bold;" href="@Url.Action("Index", "Central79Hub")">OM79 Forms List</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" style="font-weight: bold;" aria-haspopup="true" aria-expanded="false">Searching</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" style="font-weight: bold;" href="@Url.Action("Index", "OM79")">Item Index</a>
                                <a class="dropdown-item" style="font-weight: bold;" href="@Url.Action("ArchivedIndex", "OM79")">Archived Item Index</a>
                                <a class="dropdown-item" style="font-weight: bold;" href="@Url.Action("ArchivedIndex", "CENTRAL79HUB")">Archived OM79 Index</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" style="font-weight: bold;" aria-haspopup="true" aria-expanded="false">Administrator</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" style="font-weight: bold;" href="@Url.Action("DistrictAccountSystem", "AccountSystemAndWorkflow")">District Admin</a>
                                <a class="dropdown-item" style="font-weight: bold;" href="@Url.Action("StatewideAccountSystem", "AccountSystemAndWorkflow")">Central Office Admin</a>
                                <a class="dropdown-item" style="font-weight: bold;" href="@Url.Action("AdminAccountSystem", "AccountSystemAndWorkflow")">System Admin</a>
                            </div>
                        </li>

                    </ul>
                    <p class="nav navbar-text ms-auto" style="color: white;">Hello, @User.Identity?.Name!</p>
                </div>
            </div>
        </nav>
    </header>
    <div class="full-width-container">
        <div class="content-container">
            <div class="main-content">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - West Virginia Department of Transportation - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
    html, body {
        height: 100%;
        margin: 0;
    }

    .navbar-collapse {
        padding-right: 20%;
    }

    .full-width-container {
        width: 100%;
        padding-left: 10%;
        margin: 0;
    }

    .content-container {
        display: flex;
        flex-direction: row;
        min-height: 100vh;
    }

    .main-content {
        flex: 1;
        padding-right: 10%;
    }

    header {
        height: 70px;
        z-index: 1;
        position: relative;
    }

    footer {
        height: 70px;
        z-index: 1;
        position: relative;
    }
</style>

@using OM_79_HUB.Models;
@model IEnumerable<OM_79_HUB.Models.DB.OM79Hub.SignatureData>
@{
    string trafficsig, constructionsig, rightofwaysig, districtsig, bridgesig, maintenancesig;
    var temp = Model.Where(t => t.SigType == "Traffic Engineer").ToList();

    //Added the null coalescing operator with string to solve warning, idk if this is actually useful or if there's a better way to handle
    //nullability warnings (probably with !)
    trafficsig = temp.Count < 1 ? "Traffic Engineer" : temp.First().Signatures ?? "associated manager Sigs had count > 1 but no signature";

    temp = Model.Where(t => t.SigType == "Maintenance Engineer").ToList();
    maintenancesig = temp.Count < 1 ? "Maintenance Engineer" : temp.First().Signatures ?? "associated manager Sigs had count > 1 but no signature";

    temp = Model.Where(t => t.SigType == "Construction Engineer").ToList();
    constructionsig = temp.Count < 1 ? "Construction Engineer" : temp.First().Signatures ?? "associated manager Sigs had count > 1 but no signature";

    temp = Model.Where(t => t.SigType == "Right of Way Manager").ToList();
    rightofwaysig = temp.Count < 1 ? "Right of Way Manager" : temp.First().Signatures ?? "associated manager Sigs had count > 1 but no signature";

    temp = Model.Where(t => t.SigType == "District Manager").ToList();
    districtsig = temp.Count < 1 ? "District Manager" : temp.First().Signatures ?? "associated manager Sigs had count > 1 but no signature";

    temp = Model.Where(t => t.SigType == "Bridge Engineer").ToList();
    bridgesig = temp.Count < 1 ? "Bridge Engineer" : temp.First().Signatures ?? "associated manager Sigs had count > 1 but no signature";

}

<div class="input-group">
    <span class="input-group-text" id="bridgesiglabel">Bridge Engineer</span>
    <input type="text" class="form-control" readonly placeholder="@bridgesig" />   @*@bridgesig*@
    <button class="btn btn-primary sign" value="Bridge Engineer">Sign</button>
</div>
@foreach (var item in Model)
{
    if (item.SigType == "Bridge Engineer")
    {
        <div class="signature-info">
            <p><strong>Signature:</strong> @item.Signatures</p>
        </div>
    }
}
@foreach (var item in Model)
{
    if (item.SigType == "Bridge Engineer")
    {
        <div class="comment-info">
            <p><strong>Comments:</strong> @item.Comments</p>
        </div>
    }
}
@foreach (var item in Model)
{
    // Check if IsApprove is true
    if (item.IsApprove && item.SigType == "Bridge Engineer")
    {
        // Render approval information
        <div class="approval-info">
            <p><strong>Approval Status:</strong> Approved</p>
        </div>
    }

    // Check if IsDenied is true
    if (item.IsDenied && item.SigType == "Bridge Engineer")
    {
        // Render denial information
        <div class="denial-info">
            <p><strong>Denial Status:</strong> Denied</p>
        </div>
    }
}

                <!-- Hidden Fields (if any) -->
                <input type="hidden" name="HubId" value="@ViewBag.testUniqueID" />
                <br />
                <br />
                <br />

                <!-- Save Button -->
                <div class="form-group">
                    <input type="submit" name="Datsubmit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </form>
</div>
